{
    "version": "2.0.0",
    "app": {
        "name": "实时转录系统",
        "default_file": "C:\\Users\\crige\\models\\test_data\\mytest.mp4"
    },
    "paths": {
        "models_base": "C:\\Users\\crige\\models",
        "models_config": "config/models.json",
        "plugins_config": "config/plugins.json",
        "logs_dir": "logs"
    },
    "transcription": {
        "default_model": "vosk_small",
        "chunk_size": 0.5,
        "tail_padding": 0.2,
        "sample_rate": 16000,
        "language": "zh",
        "asr": {
            "enable_endpoint": true,
            "rule1_min_trailing_silence": 2.4,
            "rule2_min_trailing_silence": 1.2,
            "rule3_min_utterance_length": 20.0
        }
    },
    "translation": {
        "default_engine": "opus_mt",
        "performance": {
            "batch_size": 1,
            "max_length": 512,
            "cache_size": 1000
        }
    },
    "window": {
        "title": "实时字幕",
        "pos_x": 100,
        "pos_y": 100,
        "width": 800,
        "height": 400,
        "opacity": 0.9,
        "always_on_top": true,
        "background_mode": "translucent"
    },
    "ui": {
        "theme": "dark",
        "language": "zh_CN",
        "fonts": {
            "subtitle": {
                "family": "Arial",
                "size": 24,
                "weight": "bold",
                "color": "#FFFFFF"
            },
            "menu": {
                "family": "Arial",
                "size": 12,
                "weight": "normal",
                "color": "#FFFFFF"
            },
            "buttons": {
                "family": "Arial",
                "size": 12,
                "weight": "bold",
                "color": "#FFFFFF"
            }
        },
        "colors": {
            "background": "rgba(0, 0, 0, 150)",
            "subtitle_background": "rgba(0, 0, 0, 150)",
            "button_start": "rgba(50, 150, 50, 200)",
            "button_stop": "rgba(150, 50, 50, 200)",
            "menu_background": "rgba(60, 60, 60, 255)",
            "menu_text": "#FFFFFF",
            "menu_highlight": "#4A90E2",
            "menu_disabled": "#999999"
        }
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/app.log"
    },
    "performance": {
        "num_threads": 4,
        "batch_size": 16,
        "max_length": 512,
        "cache_size": 1000
    },
    "plugin_system": {
        "version": "1.0.0",
        "auto_reload": true,
        "allow_hot_reload": true
    }
}
