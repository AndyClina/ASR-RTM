{
    "version": "1.0.0",
    "plugins": {
        "asr": {
            "vosk_small": {
                "enabled": true,
                "type": "asr",
                "model_config": "vosk_small",
                "plugin_config": {
                    "use_words": true,
                    "show_confidence": false,
                    "buffer_size": 4000,
                    "show_all_results": false
                }
            },
            "sherpa_0220_int8": {
                "enabled": true,
                "type": "asr",
                "model_config": "sherpa_0220_int8",
                "plugin_config": {
                    "feature_dim": 80,
                    "num_threads": 1,
                    "debug": false,
                    "enable_endpoint_detection": true,
                    "rule1_min_trailing_silence": 2.4,
                    "rule2_min_trailing_silence": 1.2,
                    "rule3_min_utterance_length": 20.0,
                    "max_active_paths": 4,
                    "buffer_size": 8000
                }
            },
            "sherpa_0220_std": {
                "enabled": true,
                "type": "asr",
                "model_config": "sherpa_0220_std",
                "plugin_config": {
                    "feature_dim": 80,
                    "num_threads": 1,
                    "debug": false,
                    "enable_endpoint_detection": true,
                    "rule1_min_trailing_silence": 2.4,
                    "rule2_min_trailing_silence": 1.2,
                    "rule3_min_utterance_length": 20.0,
                    "max_active_paths": 4,
                    "buffer_size": 8000
                }
            },
            "sherpa_0626_int8": {
                "enabled": true,
                "type": "asr",
                "model_config": "sherpa_0626_int8",
                "plugin_config": {
                    "feature_dim": 80,
                    "num_threads": 1,
                    "debug": false,
                    "enable_endpoint_detection": true,
                    "rule1_min_trailing_silence": 2.4,
                    "rule2_min_trailing_silence": 1.2,
                    "rule3_min_utterance_length": 20.0,
                    "max_active_paths": 4,
                    "buffer_size": 8000
                }
            },
            "sherpa_0626_std": {
                "enabled": true,
                "type": "asr",
                "model_config": "sherpa_0626_std",
                "plugin_config": {
                    "feature_dim": 80,
                    "num_threads": 1,
                    "debug": false,
                    "enable_endpoint_detection": true,
                    "rule1_min_trailing_silence": 2.4,
                    "rule2_min_trailing_silence": 1.2,
                    "rule3_min_utterance_length": 20.0,
                    "max_active_paths": 4,
                    "buffer_size": 8000
                }
            }
        },
        "translation": {
            "opus": {
                "enabled": true,
                "type": "translation",
                "model_config": "opus",
                "plugin_config": {
                    "use_onnx": true,
                    "onnx_config": {
                        "use_io_binding": false,
                        "num_beams": 4,
                        "early_stopping": true,
                        "length_penalty": 0.6
                    }
                }
            },
            "argos": {
                "enabled": true,
                "type": "translation",
                "model_config": "argos",
                "plugin_config": {
                    "languages": {
                        "source": "en",
                        "target": "zh"
                    }
                }
            }
        }
    },
    "plugin_system": {
        "logging": {
            "enabled": true,
            "level": "INFO",
            "file": "logs/plugins.log"
        },
        "auto_reload": true,
        "allow_hot_reload": true
    }
}
